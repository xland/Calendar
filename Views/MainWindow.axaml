<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="clr-namespace:Calendar.Views"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="Calendar.Views.MainWindow"
        Icon="/Assets/logo.ico"
        Width="370" Height="328" 
        MaxWidth="370" MaxHeight="328"
        MinWidth="370" MinHeight="328"
        Background="Transparent"
        TransparencyLevelHint="Transparent"
        SystemDecorations="None"
        CanResize="False"
        WindowStartupLocation="CenterScreen"
        Title="Calendar">
    <Border BorderBrush="#000000" BorderThickness="1" Background="#AA000000" CornerRadius="6" Padding="6">
        <StackPanel Orientation="Vertical">
            <views:Header></views:Header>
            <views:WeekHeader></views:WeekHeader>
            <views:DateBox></views:DateBox>
        </StackPanel>
    </Border>
</Window>
