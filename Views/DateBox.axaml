<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:models="clr-namespace:Calendar.Models"
             xmlns:vm="clr-namespace:Calendar.ViewModels"
             mc:Ignorable="d" x:DataType="vm:MainWindowViewModel"
             x:Class="Calendar.Views.DateBox">
    <UserControl.Styles>
        <Style Selector="Button.DateBtn">
            <Setter Property="Height" Value="40"/>
            <Setter Property="Margin" Value="0"></Setter>
            <Setter Property="Padding" Value="0"></Setter>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="FontFamily" Value="{StaticResource IconFont}"/>
            <Setter Property="Background" Value="Transparent"></Setter>
            <Setter Property="CornerRadius" Value="0"></Setter>
            <Setter Property="Template">
                <ControlTemplate>
                    <Border Background="{TemplateBinding Background}"  CornerRadius="0"  BorderThickness="0" Margin="0.5 0 0 0">
                        <ContentPresenter Content="{TemplateBinding Content}"  HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Setter>
        </Style>
        <Style Selector="Button.DateBtn:pointerover">
            <Setter Property="Background" Value="#F6F6F6"/>
        </Style>
        <Style Selector="Button.DateBtn:pressed">
            <Setter Property="Background" Value="#F6F6F6"/>
        </Style>
    </UserControl.Styles>
    <ItemsControl ItemsSource="{Binding Buttons}">
        <ItemsControl.ItemsPanel>
            <ItemsPanelTemplate>
                <UniformGrid Rows="6" Columns="7" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" />
            </ItemsPanelTemplate>
        </ItemsControl.ItemsPanel>
        <ItemsControl.ItemTemplate>
            <DataTemplate x:DataType="models:DateModel">
                <Grid>
                    <Button x:DataType="models:DateModel" Classes="DateBtn" Command="{Binding Command}"  VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Padding="0">
                        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
                            <TextBlock Text="{Binding Date.Day}"   HorizontalAlignment="Center" FontSize="14" Foreground="{Binding CurMonthColor}"/>
                            <TextBlock Text="{Binding Lunar}" HorizontalAlignment="Center" FontSize="10"  Foreground="{Binding CurMonthColor2}"/>
                        </StackPanel>
                    </Button>
                    <Polygon Points="0,0 6,0 6,6" Fill="Red" HorizontalAlignment="Right" VerticalAlignment="Top" />
                </Grid>
            </DataTemplate>
        </ItemsControl.ItemTemplate>
    </ItemsControl>
</UserControl>
